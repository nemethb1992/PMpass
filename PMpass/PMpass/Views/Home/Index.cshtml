@model PMpass.Models.CredentialData;
@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
    <meta name='viewport' content='width=device-width' />
    <script src="~/js/jquery.js" type="text/javascript"></script>
    <script src="~/js/script.js" type="text/javascript"></script>
    <link rel="stylesheet" runat="server" media="screen" href="~/css/theme.css" />
    <link rel="stylesheet" runat="server" media="screen" href="~/css/bootstrap.min.css" />
    <link rel="shortcut icon" type="image/png" href="~/images/pm_logo_mini.ico" />
    <script charset="ISO-8859-1">
    </script>
    <title>PM Jelszó Frissítés</title>
</head>
<body>
    <div class="container-fluid colored-fluid px-0">
        <div class="container d-flex px-0  h-100">
            <div class="row justify-content-center mx-auto align-self-md-center w-100">
                <div class="col-12 col-sm-12 col-md-10 col-lg-8 px-5 pt-4 pb-0 h-sm-100 col-xl-8 blue MyContainer">

                    <div class="form-group">
                        <img class='float-right .d-none .d-sm-block ' style="height: 60px;" src='~/images/pm_logo_normal.svg'>
                    </div>
                    <div class="form-group">
                        <label for="text" id="HeaderLabel" class=" w-100 pt-4 h4 mb-2">Tartományi jelszó frissítés</label>
                    </div>
                    <form id='LR_form' asp-action="Index">
                        <div class="form-group">
                            <label for="usr">Tartományi felhasználónév:</label>
                            <input type="text" class="form-control h5" value="" asp-for="Username">
                        </div>
                        <div class="form-group">
                            <label for="pwd">Régi jelszó:</label>
                            <input type="password" class="form-control h5" value="" asp-for="OldPasswrod">
                        </div>
                        <div class="form-group">
                            <label for="pwd">Új jelszó:</label>
                            <input type="password" class="form-control h5" value="" asp-for="NewPassword1">
                        </div>
                        <div class="form-group">
                            <label for="pwd">Új jelszó ismét:</label>
                            <input type="password" class="form-control h5" value="" asp-for="NewPassword2">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Mentés" id="save_btn" class="btn btn-dark mt-3 w-100" />
                            <p id="info_label" class=" text-center pt-3  w-100">@ViewData["Message"]</p>
                            <p id="logo-text" class="text-center pt-3 mb-0 pb-0  w-100">Phoenix Mecano Kecskemét Kft.</p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>